<% include ../partials/header %>
<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

<!-- Isolated Version of Bootstrap, not needed if your site already uses Bootstrap -->
<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

<!-- Bootstrap Date-Picker Plugin -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"/>
<div class="page-content">
    <div class="row">
        <div class="col-md-2">
            <% include navbar %>
        </div>
        <div class="col-md-10">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Upload course materials:</div>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" action="/subjects/upload" id="leaveForm"  method="POST" enctype="multipart/form-data">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="select-1">Subject</label>
                            <div class="col-md-10">

                                <select class="form-control" id="select-1" name="subject">
                                    <option>Sinhala</option>
                                    <option>Buddhism</option>
                                    <option>Science</option>
                                    <option>Maths</option>
                                    <option>English</option>
                                    <option>History</option>
                                </select>

                            </div>
                        </div>
                        <div class="form-group"> <!-- Date input -->
                            <label for="inputEmail3" class="col-sm-2 control-label">Date</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="date" name="date" placeholder="MM/DD/YYYY" type="date" required/>
                            </div>
                        </div>

                        <div class="form-group"> <!-- Date input -->
                            <label for="inputEmail3" class="col-sm-2 control-label">Input file</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control-file" id="file" name="file" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>

                    </form>
                    <script>
                        $(document).ready(function(){
                            $('.btn').on('click',function(){
                                $.ajax({
                                    type:'get',
                                    url:'/principal/getSchemes',
                                    success:function(data){
                                        $('#changeThis').html(data);
                                    }
                                });
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>