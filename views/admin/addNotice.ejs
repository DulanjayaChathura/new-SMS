<% include ../partials/header %>

<link href="/stylesheets/fullcalendar.css" rel="stylesheet" media="screen">
<link href="/stylesheets/calendar.css" rel="stylesheet">
<div class="page-content">
    <div class="row">
        <div class="col-md-2">
            <% include navBar %>
        </div>
        <div class="col-md-10">

            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Add Dashbord notice</div>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" action="/users/notice" method="POST">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">First name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="Topic" name="topic" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Textarea</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" placeholder="Notice" rows="10" type="text" required name="notice"></textarea>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>


            </div>
        </div>
    </div>

<% include ../partials/footer %>